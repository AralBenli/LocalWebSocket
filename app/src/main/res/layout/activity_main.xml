<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- TextView to display the ID -->
            <TextView
                android:id="@+id/tv_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="ID"
                android:textSize="16sp" />

            <!-- TextView to display the Title -->
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Title"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- TextView to display the Description -->
            <TextView
                android:id="@+id/tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Description"
                android:textSize="16sp" />

            <!-- ImageView to display the image from the URL -->
            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:contentDescription="Image"
                android:scaleType="centerCrop" />

            <!-- Switch to represent the boolean status -->
            <Switch
                android:id="@+id/switch_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Status" />

            <Switch
                android:id="@+id/interactionSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Socket Interaction" />

            <TextView
                android:id="@+id/socketResponse"
                android:layout_width="match_parent"
                android:text = "websocket response from checkbox"
                android:layout_height="wrap_content"/>

        </LinearLayout>


        <TextView
            android:id="@+id/textView"
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/disconnect"
            android:layout_marginTop="20dp"
            android:ellipsize="end"
            android:maxLines="4"
            app:layout_constraintVertical_bias="0.7"
            android:text="WebSocket Messages"
            android:textAlignment="center"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/connect"
            android:layout_width="160dp"
            android:layout_height="85dp"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="50dp"
            android:backgroundTint="@color/cardview_dark_background"
            android:padding="10dp"
            android:text="@string/connect_to_websocket"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/disconnect"
            android:layout_width="160dp"
            android:layout_height="85dp"
            android:layout_below="@+id/connect"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="50dp"
            android:backgroundTint="@color/cardview_dark_background"
            android:padding="10dp"
            android:text="@string/disconnect_from_websocet"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>